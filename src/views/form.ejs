<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Konsultasi Dokter</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mt-3 mb-4"><%= title %></h1>

      <table class="table">
        <thead>
          <tr class="table-dark text-center">
            <th scope="col">id</th>
            <th scope="col">Nama</th>
            <th scope="col">Keluhan</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% for (let user of users) { %>
          <tr class="table-secondary text-center">
            <th scope="row"><%= user.id %></th>
            <th scope="row"><%= user.nama %></th>
            <th scope="row"><%= user.keluhan %></th>
            <th scope="row">
              <a class="btn btn-warning me-3" href="/edit/<%= user.id %>"
                >Edit</a
              ><a class="btn btn-danger" href="/delete/<%= user.id %>">
                Hapus</a
              >
            </th>
          </tr>

          <% } %>
        </tbody>
      </table>
      <form action="/tambah" method="POST">
        <h4 class="text-center m-5">Tambah Data Pasien</h4>
        <div class="row mb-3">
          <label for="nama" class="col-sm-2 col-form-label fw-semibold"
            >Nama Lengkap</label
          >
          <div class="col-sm-10">
            <input type="text" name="nama" class="form-control" />
          </div>
        </div>
        <div class="row mb-3">
          <label for="keluhan" class="col-sm-2 col-form-label fw-semibold"
            >Keluhan Pasien</label
          >
          <div class="col-sm-10">
            <input type="text" name="keluhan" class="form-control" />
          </div>
        </div>
        <div class="d-flex justify-content-evenly">
          <input
            type="submit"
            class="btn btn-success"
            id="liveAlertBtn"
            value="Tambahkan"
          />
          <a class="btn btn-primary btn-lg" href="/" role="button">Kembali</a>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
